{
	"name": "rest-boilerplate-ts",
	"version": "0.3.2",
	"main": "index.ts",
	"scripts": {
		"prepare": "npx husky install",
		"build": "rm -fr dist/* && npx tsc",
		"start": "node dist/index.js",
		"start:docker": "docker build -t knitto_boiler_plate:latest --build-arg github_token=${GITHUB_TOKEN} . && docker compose up -d",
		"stop:docker": "docker compose down",
		"dev": "tsx --watch src/index.ts",
		"lint": "eslint --fix **/*.ts",
		"test": "jest",
		"release": "release-it"
	},
	"keywords": [],
	"author": "Knitto Textile Dept IT",
	"license": "MIT",
	"dependencies": {
		"@knittotextile/knitto-core-backend": "^0.1.2",
		"@knittotextile/knitto-http": "^0.1.4",
		"@knittotextile/knitto-mysql": "^0.1.0",
		"@knittotextile/knitto-rabbitmq": "^1.0.0",
		"bcryptjs": "^2.4.3",
		"class-sanitizer": "^1.0.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"dotenv": "^16.4.5",
		"jsonwebtoken": "^9.0.0",
		"module-alias": "^2.2.3",
		"tslib": "^2.6.2",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@babel/core": "^7.23.7",
		"@babel/plugin-proposal-decorators": "^7.23.7",
		"@babel/preset-env": "^7.23.7",
		"@babel/preset-typescript": "^7.23.3",
		"@release-it/conventional-changelog": "^8.0.1",
		"@types/bcryptjs": "^2.4.2",
		"@types/jest": "^29.5.11",
		"@types/jsonwebtoken": "^9.0.2",
		"@types/module-alias": "^2.0.4",
		"@types/node": "^20.10.4",
		"@types/uuid": "^9.0.7",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"babel-jest": "^29.7.0",
		"eslint": "^8.55.0",
		"eslint-config-standard-with-typescript": "^42.0.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
		"eslint-plugin-promise": "^6.0.0",
		"husky": "^8.0.3",
		"jest": "^29.7.0",
		"module-alias-jest": "^0.0.3",
		"release-it": "^17.0.1",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3"
	},
	"release-it": {
		"git": {
			"requireBranch": "release",
			"commitMessage": "chore: release v${version}",
			"requireCommits": true,
			"requireCleanWorkingDir": false,
			"push": true
		},
		"github": {
			"release": true,
			"releaseName": "V ${version}"
		},
		"npm": {
			"publish": false
		},
		"hooks": {
			"before:init": [
				"pnpm build"
			],
			"after:bump": "npx auto-changelog -p"
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"preset": "angular",
				"infile": "CHANGELOG.md",
				"header": "# Changelog"
			}
		}
	},
	"_aliases": {
		"@root": "./src/",
		"@http": "./src/app/http/",
		"@httpController": "./src/app/http/controller/",
		"@repositories": "./src/repositories/",
		"@libs": "./src/libs/",
		"@services": "./src/services/"
	}
}
