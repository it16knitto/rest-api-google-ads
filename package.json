{
	"name": "rest-boilerplate-ts",
	"version": "0.3.2",
	"main": "index.ts",
	"scripts": {
		"build": "rm -fr dist/* && npx tsc",
		"start": "node dist/index.js",
		"dev": "tsx --watch src/index.ts",
		"migrate": "npx knex --knexfile=./database/knexfile.ts migrate:latest",
		"migrate:up": "npx knex --knexfile=./database/knexfile.ts migrate:up",
		"migrate:down": "npx knex --knexfile=./database/knexfile.ts migrate:down",
		"migrate:make": "npx knex --knexfile=./database/knexfile.ts migrate:make",
		"lint": "eslint --fix **/*.ts",
		"test": "jest",
		"release": "release-it"
	},
	"keywords": [],
	"author": "Knitto Textile Dept IT",
	"license": "MIT",
	"dependencies": {
		"@knittotextile/knitto-core-backend": "^0.6.0",
		"amqplib": "^0.10.3",
		"bcryptjs": "^2.4.3",
		"class-sanitizer": "^1.0.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"cors": "^2.8.5",
		"dotenv": "^16.1.3",
		"generic-pool": "^3.9.0",
		"jsonwebtoken": "^9.0.0",
		"mysql2": "^3.6.5",
		"ts-node": "^10.9.2",
		"tslib": "^2.6.2",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@babel/core": "^7.23.7",
		"@babel/plugin-proposal-decorators": "^7.23.7",
		"@babel/preset-env": "^7.23.7",
		"@babel/preset-typescript": "^7.23.3",
		"@release-it/conventional-changelog": "^8.0.1",
		"@types/bcryptjs": "^2.4.2",
		"@types/cors": "^2.8.13",
		"@types/jest": "^29.5.11",
		"@types/jsonwebtoken": "^9.0.2",
		"@types/node": "^20.5.9",
		"@types/uuid": "^9.0.7",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"babel-jest": "^29.7.0",
		"eslint": "^8.55.0",
		"eslint-config-standard-with-typescript": "^42.0.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
		"eslint-plugin-promise": "^6.0.0",
		"husky": "^8.0.3",
		"jest": "^29.7.0",
		"knex": "^3.1.0",
		"release-it": "^17.0.1",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3"
	},
	"release-it": {
		"git": {
			"requireBranch": "release",
			"commitMessage": "chore: release v${version}",
			"requireCommits": true,
			"requireCleanWorkingDir": false,
			"push": true
		},
		"github": {
			"release": true,
			"releaseName": "V ${version}"
		},
		"npm": {
			"publish": false
		},
		"hooks": {
			"before:init": [
				"pnpm build"
			],
			"after:bump": "npx auto-changelog -p"
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"preset": "angular",
				"infile": "CHANGELOG.md",
				"header": "# Changelog"
			}
		}
	}
}
